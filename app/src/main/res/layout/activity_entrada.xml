<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.invapp.EntradaActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">

    </LinearLayout>

    <TextView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Almacen"
        android:id="@+id/tvCentroPrincipal"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/linearLayout4"></LinearLayout>

    <TextView android:text="MostrarAlmacen" android:id="@+id/tvMostrarAlmacenEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCentroPrincipal"
        android:layout_alignBottom="@+id/tvCentroPrincipal"
        android:layout_toRightOf="@+id/tvCentroPrincipal"
        android:layout_toEndOf="@+id/tvCentroPrincipal">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion"
        android:id="@+id/tvRecuento"
        android:layout_below="@+id/tvCentroPrincipal"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/tvDescripcionEntrada"
        android:layout_alignEnd="@+id/tvDescripcionEntrada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMostrarUbicacionEntrada"
        android:layout_alignTop="@+id/tvRecuento"
        android:layout_toRightOf="@+id/tvCentroPrincipal"
        android:text="MostrarEntrada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lote"
        android:id="@+id/tvFechaPrincipal"
        android:layout_above="@+id/tvCodigoEntrada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MostrarLote"
        android:id="@+id/tvMostrarLoteEntrada"
        android:layout_alignTop="@+id/tvFechaPrincipal"
        android:layout_toRightOf="@+id/tvCentroPrincipal"
        android:layout_toEndOf="@+id/tvCentroPrincipal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        android:id="@+id/tvCodigoEntrada"
        android:layout_above="@+id/tvDescripcionEntrada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MostrarDescripcion"
        android:id="@+id/tvMostrarDescripcionEntrada"
        android:layout_alignTop="@+id/tvDescripcionEntrada"
        android:layout_alignLeft="@+id/tvMostrarLoteEntrada"
        android:layout_alignStart="@+id/tvMostrarLoteEntrada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:id="@+id/tvDescripcionEntrada"
        android:layout_above="@+id/edUbicacionEntrada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MostrarCodigo"
        android:id="@+id/tvMostrarCodigoEntrada"
        android:layout_alignTop="@+id/tvCodigoEntrada"
        android:layout_alignLeft="@+id/tvMostrarDescripcionEntrada"
        android:layout_alignStart="@+id/tvMostrarDescripcionEntrada" />


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button4"
        android:drawableBottom="@drawable/iconolupa"
        android:layout_alignBottom="@+id/edUbicacionEntrada"
        android:layout_toRightOf="@+id/tvMostrarUbicacionEntrada"
        android:layout_toEndOf="@+id/tvMostrarUbicacionEntrada" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/edUbicacionEntrada"
        android:text="Ubicacion"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edArticuloEntrada"
        android:layout_alignEnd="@+id/edArticuloEntrada" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button2"
        android:drawableBottom="@drawable/iconolupa"
        android:layout_alignBottom="@+id/edArticuloEntrada"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/edArticuloEntrada"
        android:text="Articulo"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/edUbicacionEntrada"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edCantidadEntrada"
        android:layout_below="@+id/edArticuloEntrada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:text="Cantidad"
        android:layout_toLeftOf="@+id/tvMostrarDescripcionEntrada"
        android:layout_toStartOf="@+id/tvMostrarDescripcionEntrada" />
</RelativeLayout>
