<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.invapp.AltaLineaRecuentoActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edAlmacen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:hint="Almacen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edUbicacion"
        android:layout_marginTop="25dp"
        android:hint="Ubicacion"
        android:layout_below="@+id/edAlmacen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edAlmacen"
        android:layout_alignEnd="@+id/edAlmacen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edLote"
        android:layout_marginTop="26dp"
        android:hint="Lote"
        android:layout_below="@+id/edUbicacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edUbicacion"
        android:layout_alignEnd="@+id/edUbicacion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edProducto"
        android:layout_marginTop="36dp"
        android:hint="Producto"
        android:layout_below="@+id/edLote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edLote"
        android:layout_alignEnd="@+id/edLote" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edCantidad"
        android:layout_marginTop="43dp"
        android:hint="Cantidad"
        android:inputType="number"
        android:layout_below="@+id/edProducto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edProducto"
        android:layout_alignEnd="@+id/edProducto" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/bnOK"
        android:layout_below="@+id/edCantidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/bnCancel"
        android:layout_alignBottom="@+id/bnOK"
        android:layout_alignRight="@+id/edCantidad"
        android:layout_alignEnd="@+id/edCantidad" />
</RelativeLayout>
